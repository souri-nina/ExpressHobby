<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>My cooking</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add cooking</h3>
       <form action='/cooking' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>x</th>
       </thead>
       <tbody>
         <% cooking.forEach( function(recipe) { %>
          <% var url = "/cooking/" + cooking.id + "?_method=DELETE" %>
          <% var editUrl = "cooking/" + cooking.id + "/edit" %>
          <tr>
            <td><%= cooking.title %></td>
            <td>
              <a class="btn" href=<%= editUrl %>>Edit</a>
            </td>
            <td>
              <form method="POST" action=<%= url %>>
                <button class="btn red">Delete</button>
              </form>
            </td>
          </tr>

         <% }); %>
       </tbody>
     </table>
   </body>
</html>